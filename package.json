{
  "name": "thoughtshare-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ThoughtShare Full-Stack Application - Module 4",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start:frontend": "npm run dev --workspace=@thoughtshare/frontend",
    "start:backend": "npm start --workspace=@thoughtshare/backend",
    "dev": "concurrently \"npm:start:frontend\" \"npm:start:backend\"",
    "build": "npm run build --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "dotenv": "^16.3.1"
  }
}