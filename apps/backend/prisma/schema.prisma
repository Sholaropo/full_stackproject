generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  displayName String
  email       String
  joinDate    DateTime @default(now())
  isVerified  Boolean  @default(false)

  @@map("users")
}

model Thought {
  id        String   @id @default(uuid())
  author    String
  content   String
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  userId    String?

  @@map("thoughts")
}

